FROM mcr.microsoft.com/dotnet/aspnet:6.0-focal AS base
WORKDIR /app
EXPOSE 5118

ENV ASPNETCORE_URLS=http://+:5118

# Creates a non-root user with an explicit UID and adds permission to access the /app folder
# For more info, please refer to https://aka.ms/vscode-docker-dotnet-configure-containers
RUN adduser -u 5678 --disabled-password --gecos "" appuser && chown -R appuser /app
USER appuser

FROM mcr.microsoft.com/dotnet/sdk:6.0-focal AS build
#RUN curl -ks  http://pki.mts.ru/class2root.crt -o /usr/local/share/ca-certificates/class2root.crt && /usr/sbin/update-ca-certificates
WORKDIR /src
COPY ["EM.FakeData/EM.FakeData.csproj", "EM.FakeData/"]
COPY ["EM.Contracts/EM.Contracts.csproj", "EM.Contracts/"]
COPY ["EM.Shared/EM.Shared.csproj", "EM.Shared/"]
RUN dotnet restore "EM.FakeData/EM.FakeData.csproj"
COPY ["EM.FakeData", "EM.FakeData"]
COPY ["EM.Contracts", "EM.Contracts"]
COPY ["EM.Shared", "EM.Shared"]
WORKDIR "/src/EM.FakeData"
RUN dotnet build "EM.FakeData.csproj" -c Release -o /app/build --no-restore

FROM build AS publish
RUN dotnet publish "EM.FakeData.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "EM.FakeData.dll"]
