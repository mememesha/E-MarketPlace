@inject NavigationManager _navigation
@inject SignOutSessionStateManager _signOutManager

<AuthorizeView>
    <Authorized>
        <button class="btn btn-outline-light" @onclick="BeginSignOut">
            <i class="oi oi-account-logout"></i>
        </button>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login" class="btn btn-outline-light">
            <i class="oi oi-account-login"></i>
        </a>
    </NotAuthorized>
</AuthorizeView>



@code {

    private async Task BeginSignOut(MouseEventArgs args)
    {
        await _signOutManager.SetSignOutState();
        _navigation.NavigateTo("authentication/logout");
    }

}